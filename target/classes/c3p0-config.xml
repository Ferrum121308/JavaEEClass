        <property name="jdbcUrl">jdbc:mysql://localhost:3306/javaee?serverTimezone=GMT%2b8&amp;useUnicode=true&amp;characterEncoding=utf8</property>
        <!--设置用户-->
        <property name="user">root</property>
        <!--设置密码-->
        <property name="password">121308</property>
